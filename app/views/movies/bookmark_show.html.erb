<div class="container">
  <div class="row">
    <div class="card mb-3 mt-5 bg-dark text-white bg-opacity-75">
      <div class="row g-0">
        <div class="col-md-6">
          <%= image_tag "https://image.tmdb.org/t/p/w1280/#{@like["poster_path"]}", class: "card-img" %>
        </div>
        <div class="col-md-6">
          <div class="card-body">
            <h5 class="card-title text-center"><%= @like["name"] %></h5>
            <p class="card-text text-center"><%= @like["overview"] %></p>
            <p class="card-text text-center"><small class="text-muted"><%= @like["id"] %></small></p>
            <div class="d-flex align-items-center justify-content-center">
              <div class="like" style="width: 70px;">
                <%= render partial: 'likes/like', locals: { user_id: current_user.id, movie_id: @movie_id } %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>    
  </div>
</div>