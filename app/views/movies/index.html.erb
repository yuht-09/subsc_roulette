<div class="container">
  <div class="row">
    <div class="card mb-3 mt-5 bg-dark text-white bg-opacity-75">
      <div class="row g-0">
        <div class="col-md-6">
          <%= image_tag "https://image.tmdb.org/t/p/w1280/#{@movies.poster_path}", class: "card-img" %>
        </div>
        <div class="col-md-6">
          <div class="card-body">
            <h5 class="card-title text-center"><%= @movies.name %></h5>
            <p class="card-text text-center"><%= @movies.overview %></p>
            <p class="card-text text-center"><small class="text-muted"><%= @movies.id %></small></p>
            <div class="d-flex align-items-center justify-content-center">
              <div class="like" style="width: 70px;">
              <% if Like.exists?(user_id: current_user.id, movie_id: @movies.id) %>
                <%= link_to movie_likes_path(movie_id: @movies.id), class: "text-white", method: :delete do %>
                  <i class="fas fa-plus fa-5x"></i>
                  <span class="fa-pull-left">気になる</span>
                <% end %>
              <% else %>
                <%= link_to movie_likes_path(movie_id: @movies.id),  class: "text-white", method: :post do %>
                  <i class="fas fa-plus-circle fa-5x"></i>
                  <span class="fa-pull-left">気になる</span>
                <% end %>
              <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>    
  </div>
</div>