<div class="container">
  <div class="row">
    <div class="col-md-10 offset-md-1 col-lg-8 offset-lg-2">
      <div class="mt-5 fs-1 text-center">
       <i class="fas fa-user-circle fa-6x"></i>
      </div>
      <div class="fs-1 text-center">
       <%= @user.name %>
      </div>
       <div class="d-flex justify-content-around my-5">
       <div class="d-flex flex-column" style="width: 100px;">
        <%= link_to logout_path, method: :delete, class: 'text-white' do %>
         <i class="fas fa-sign-out-alt fa-5x"></i>
         <span class="fa-pull-left">ログアウト</span>
        <% end %>
       </div>
       <div class="d-flex flex-column" style="width: 150px;">
        <%= link_to edit_user_path(@user), class: 'text-white' do %>
          <i class="fas fa-pen fa-5x"></i>
          <span class="fa-pull-left">プロフィール編集</span>
        <% end %> 
       </div>
       <div class="d-flex flex-column" style="width: 120px;">
        <%= link_to likes_path, class: "text-white" do %>
         <i class="fas fa-plus fa-5x"></i>
         <span class="fa-pull-left">気になるリスト</span>
        <% end %>
       </div>
       </div>
    </div>
  </div>
</div>