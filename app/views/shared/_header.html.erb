<nav class="sticky-top shadow navbar navbar-light bg-dark">

    <%= link_to root_path, class:"navbar-brand ms-2" do %>
      <i class="fas fa-random text-white fs-2"></i>
      <span class="text-white fs-2">サブスクルーレット</span>
    <% end %>
    
    <% if logged_in? %>
      <%= link_to user_path(current_user), class: 'navbar-brand d-flex align-items-center me-3 text-light' do %>
        <i class="fas fa-user-circle fs-2 me-1"></i>
        <span><%= current_user.name %></span>
      <% end %> 
    <% else %>
      <%= link_to login_path, class: 'd-flex me-3 text-light' do %>
        <span>ログイン</span>
      <% end %>
    <% end %>  
</nav>